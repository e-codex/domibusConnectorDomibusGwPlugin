                    <!-- download domibus AS4 gw -->
                    <execution>
                        <id>copy-domibus</id>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>

                            <overWriteSnapshots>true</overWriteSnapshots>
                            <overWriteReleases>true</overWriteReleases>
                            <outputDirectory>target/gw</outputDirectory>
                            <excludes>
                                domibus/conf/domibus/plugins/lib/*.*, domibus/conf/domibus/plugins/config/*.*
                            </excludes>
                            <artifactItems>
                                <artifactItem>
                                    <overWrite>true</overWrite>
                                    <groupId>eu.domibus</groupId>
                                    <artifactId>domibus-distribution</artifactId>
                                    <classifier>tomcat-full</classifier>
                                    <version>${domibus-gw.version}</version>
                                    <type>zip</type>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <!-- download domibus connector gateway plugin -->
                    <execution>
                        <id>copy-domibus-connector-gw-plugin</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <overWriteReleases>true</overWriteReleases>
                            <outputDirectory>target/gw/domibus/conf/domibus/plugins/lib/</outputDirectory>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                    <!-- download mysql driver -->
                    <execution>
                        <id>copy-mysql-driver</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <overWriteReleases>true</overWriteReleases>
                            <outputDirectory>target/gw/domibus/lib</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <overWrite>true</overWrite>
                                    <groupId>mysql</groupId>
                                    <artifactId>mysql-connector-java</artifactId>
                                    <version>8.0.26</version>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <!-- download mariadb driver -->
                    <execution>
                        <id>copy-mariadb-driver</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <overWriteReleases>true</overWriteReleases>
                            <outputDirectory>target/gw/domibus/lib</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <overWrite>true</overWrite>
                                    <groupId>org.mariadb.jdbc</groupId>
                                    <artifactId>mariadb-java-client</artifactId>
                                    <version>3.0.4</version>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <!-- download h2 driver -->
                    <execution>
                        <id>copy-h2-driver</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <overWriteReleases>true</overWriteReleases>
                            <outputDirectory>target/gw/domibus/lib</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <overWrite>true</overWrite>
                                    <groupId>com.h2database</groupId>
                                    <artifactId>h2</artifactId>
                                    <version>2.1.212</version>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jkube</groupId>
                <artifactId>openshift-maven-plugin</artifactId>
                <version>1.7.0</version>
                <configuration>
                    <skip>false</skip>
                    <buildStrategy>docker</buildStrategy>
                    <resources>
                        <openshiftBuildConfig>
                            <requests>
                                <cpu>200m</cpu>
                                <memory>256Mi</memory>
                            </requests>
                            <limits>
                                <cpu>1000m</cpu>
                                <memory>1Gi</memory>
                            </limits>
                        </openshiftBuildConfig>
                    </resources>
                    <images>
                        <image>
                            <name>domibus-gw-with-connector-plugin</name>
                            <build>
                                <tags>
                                    <tag>${domibus-gw.version}</tag>
                                </tags>
                                <dockerFile>Dockerfile</dockerFile>
                                <fromExt>
                                    <name>java:openjdk-8-ubi8</name>
                                    <kind>ImageStreamTag</kind>
                                    <namespace>openshift</namespace>
                                </fromExt>
                                <assembly>
                                    <name>test</name>
                                    <mode>dir</mode>
                                    <targetDir>app</targetDir>
                                    <excludeFinalOutputArtifact>true</excludeFinalOutputArtifact>
                                    <layers>
                                        <layer>
                                            <id>domibusTomcat</id>
                                            <baseDirectory>${project.basedir}</baseDirectory>
                                            <fileSets>
                                                <fileSet>
                                                    <outputDirectory>./</outputDirectory>
                                                    <directory>target/gw/</directory>
                                                </fileSet>
                                            </fileSets>
                                        </layer>
                                    </layers>
                                </assembly>
                            </build>
                        </image>
                    </images>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>