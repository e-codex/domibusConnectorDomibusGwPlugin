<assembly>
	<id>Plugin</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- ==================== Copying conf files ================= -->
		<fileSet>
			<directory>${project.basedir}/conf/
			</directory>
			<outputDirectory>/config
			</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<!-- ==================== Copying JAR file ================= -->
		<file>
			<source>${project.basedir}/target/${project.build.finalName}</source>
			<outputDirectory>/lib
			</outputDirectory>
			<destName>domibus-connector-plugin.jar</destName>
		</file>
	</files>
</assembly>